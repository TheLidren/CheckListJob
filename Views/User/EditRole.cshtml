@model RoleViewModel

@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <p class="h4 fw-normal">Назначение роли для @Model.User.Login</p>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("EditRole", "User", FormMethod.Post, new { @class = "form-floating col-11" }))
        {
            @Html.AntiForgeryToken();
            @Html.Hidden("userId", Model.User.Id)
            <div class="m-2 form-group col-md-6">
                @Html.Label("roleId", "Роль:", new { @class = "mb-2" })
                @Html.DropDownList("roleId", (SelectList)Model.Roles, new { @class = "form-control" })
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Сохранить</button>
        }
    </div>
</div>