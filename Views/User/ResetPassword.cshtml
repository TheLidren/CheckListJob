@model ResetPasswordViewModel

@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <p class="h4 fw-normal">Сброс пароля для @Model.Login</p>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { @class = "form-floating col-11" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("Login", Model.Login)
            <div class="form-group col-md-12">
                @Html.Label("NewPassword", "Пароль:", new { @class = "mb-2" })
                @Html.TextBox("NewPassword", "", new { type = "password", @class = "form-control w-50", placeholder = "Введите пароль", required = "required", pattern = ".{8,255}", title = "Пароль должен содержать от 8 символов" })
                @Html.ValidationMessage("NewPassword")
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Сохранить</button>
        }
    </div>
</div>