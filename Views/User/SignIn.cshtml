@model CheckListJob.Models.User
@Html.ValidationSummary(true)
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<main class="form-signin w-50 m-auto pb-4">
    <div class="text-center">
        <div class="m-auto">
            <h1 class="h3 mb-3 mt-2 fw-normal">Пожалуйста, войдите</h1>
        </div>
    </div>
    @using (Html.BeginForm("SignIn", "User", FormMethod.Post, new { @class = "form-floating" }))
    {
        <div class="form-floating">
            @Html.TextBoxFor(m => m.Login, new { type = "text", @class = "form-control" })
            @Html.LabelFor(m => m.Login, "Логин:", new { @class = "mb-2" })
            @Html.ValidationMessageFor(m => m.Login)
        </div>
        <div class="form-floating">
            @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control" })
            @Html.LabelFor(m => m.Password, "Пароль:", new { @class = "mb-2" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <button class="w-100 mt-4 mb-4 btn btn-lg btn-primary" type="submit">Авторизация</button>
        @Html.ActionLink("Регистрация", "SignUp", "User", null, new { @class = "w-100 btn btn-lg btn-primary" })
    }
</main>

